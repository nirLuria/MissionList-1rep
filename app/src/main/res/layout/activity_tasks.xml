<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yellow_notebook_paper"
    tools:context="com.example.nluria.missionlist.tasks"
    android:weightSum="1"
    android:baselineAligned="false">


    <TableLayout
        android:layout_width="29dp"
        android:layout_height="267dp"
        android:layout_weight="0.95"
        android:orientation="horizontal"
        android:id="@+id/table_for_buttons">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout android:layout_column="3"></TableLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:text="Add"
        android:id="@+id/Add_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:layout_gravity="bottom"
        android:elegantTextHeight="false"
        android:clickable="false" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Add_btn"
        android:layout_marginTop="49dp"
        android:textSize="@dimen/design_bottom_navigation_height" />

    <Button
        android:layout_width="85dp"
        android:layout_height="71dp"
        android:text="delete tasks"
        android:id="@+id/delete_tasks_btn"
        android:layout_alignTop="@+id/Add_btn"
        android:layout_toRightOf="@+id/Add_btn"
        android:layout_toEndOf="@+id/Add_btn"
        android:layout_gravity="bottom" />


</LinearLayout>
