<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yellow_notebook_paper"
    tools:context="com.example.nluria.missionlist.tasks"
    android:weightSum="1"
    android:orientation="vertical">


    <TextView
        android:text="Title"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Add_btn"
        android:layout_marginTop="30dp"
        android:layout_column="10"
        android:layout_width="133dp"
        android:layout_height="74dp"
        android:textSize="32dp"
        android:layout_weight="0.25" />

    <TableLayout
        android:layout_width="213dp"
        android:layout_height="222dp"
        android:orientation="horizontal"
        android:id="@+id/table_for_buttons"
        android:layout_weight="0.25">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout android:layout_column="3"></TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="10">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>
    </TableLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Add"
        android:id="@+id/Add_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:elegantTextHeight="false"
        android:clickable="false"
        android:layout_gravity="right"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_weight="0.45" />

    <Button
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:text="delete tasks"
        android:id="@+id/delete_tasks_btn"
        android:layout_alignTop="@+id/Add_btn"
        android:layout_toRightOf="@+id/Add_btn"
        android:layout_toEndOf="@+id/Add_btn"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_weight="0.25"
        android:layout_gravity="right" />


</LinearLayout>
