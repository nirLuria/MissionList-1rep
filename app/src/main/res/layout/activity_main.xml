<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yellow_notebook_paper"
    tools:context="com.example.nluria.missionlist.MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/exitBotton"
        android:singleLine="false"
        android:background="@drawable/custom_button"
        android:shadowColor="#343434"
        android:textColor="#fefefe"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:layout_below="@+id/newViewGroupsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_a_new_group"
        android:id="@+id/New_ListButton"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_marginTop="88dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dropdownitem_icon_width" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_my_groups"
        android:id="@+id/newViewGroupsButton"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:layout_below="@+id/New_ListButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
